* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

.config_body {
    overflow: hidden;
    display: flex;
    flex-direction: column;
    color: black;
}

.comentarios {
    height: 70vh;
    width: 100vw;
    position: relative;
}

.inform {
    height: 100vh;
    width: 100vw;
}

.fundo_inform {
    height: 110vh;
    width: 100vw;
    background-color: #8778E0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.caderno {
    transform: translateY(-70px);
    display: flex;
    justify-content: center;
    align-items: center;
}

.caderno_imagem {
    width: calc(460px * 4);
    height: calc(450px * 2);
}

.background_image {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 0;
}

.text_config {
    position: relative;
    z-index: 1;
    padding: 40px;
}

.text-conf {
    transform: translateX(-160px);
    font-size: 50px;
    background-color: #ffd646 !important;
    font-family: 'Instrument Sans';
    color: rgb(0, 0, 0);
    padding: 20px 190px;
    display: inline-block;
    margin-bottom: 30px;
    opacity: 0.9;
}

.text-conteiner {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.text1 {
    width: 23vw;
    height: 45vh;
    transform: translateY(10px);
    text-align: justify;
}

.text-size {
    font-size: 32px;
    font-family: 'Instrument Sans';
}

.caderno_wrapper {
    position: relative;
    width: fit-content;
}

.menina {
    position: absolute;
    top: 160px;
    left: 50%;
    transform: translateX(50%);
    width: 500px;
    height: 500px;
    z-index: 1;
}

.pageInform {
    z-index: 1;
    position: absolute;
    display: flex;
    flex-direction: column;
}

.pageInform-text {
    height: 30vh;
    width: 60vw;
    font-size: 30px;
    color: #fff;
    padding: 180px 0px 0px 120px;
}

.text-title {
    font-size: 50px;
    height: 10vh;
    width: 70vw;
    font-family: 'Instrument Sans';
}

.text-paragrafo {
    font-size: 35px;
    height: 30vh;
    width: 50vw;
    font-family: 'Instrument Sans';
    text-align: justify;
}

.pageInform-button {
    height: 7vh;
    width: 15vw;
    border-radius: 8px;
    background-color: #7A6DB2;

    display: flex;
    justify-content: center;
    align-items: center;

    margin-top: 300px;
    margin-left: 135px;
}

.text-button {
    color: #fff;
    font-size: 20px;
    font-family: 'Instrument Sans';
    font-weight: bold;
}